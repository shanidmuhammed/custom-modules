<odoo>
    <data>
        <record id="account_move_invoice_inherited" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <field name="state" position="before">
                    <field name="is_overdue"
                           widget="badge"
                           decoration-danger="is_overdue == 'OVERDUE'"
                           optional="show"
                           class="fs-3"/>
                </field>

                <xpath expr="//field[@name='invoice_date']" position="after">
                        <field name="followup_status"/>
                </xpath>

                <xpath expr="//field[@name='followup_status']" position="after">
                <field name="followup_remark"/>
                </xpath>

                <xpath expr="//field[@name='followup_remark']" position="after">
                <field name="next_followup_date"
                   required="followup_status != 'not contacted'"/>>
                </xpath>

            </field>
        </record>

        <record id="account_move_invoice_list_inherited" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="is_overdue"
                           widget="badge"
                           decoration-danger="is_overdue == 'OVERDUE'"
                           optional="show"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>